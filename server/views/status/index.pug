extends ../layouts/application.pug

block content
  h1.mb-3= t('views.status.label')
  a.btn.btn-dark(href=route('newStatus'))= t('views.status.create')
  table.table.table-striped
    thead
      tr
        th= t('views.status.id')
        th= t('views.status.name')
        th= t('views.status.createdAt')
        th
    tbody
      each status in statuses
        tr
          td= status.id
          td= status.name
          td= formatDate(status.createdAt)
          td
            .d-flex.flex-wrap
              //- a.btn.btn-dark.m-1(href=route('statusEdit', { id: status.id }))= t('views.status.edit') TODO: why don't work route?
              a.btn.btn-dark.m-1(href=`statuses/${status.id}/edit`)= t('views.status.edit')
              //- +buttonTo(route('statusDelete', { id: status.id} ), 'DELETE')(class='btn btn-danger m-1', value=t('views.status.delete'))
              +buttonTo(`/statuses/${status.id}`, 'DELETE')(class='btn btn-danger m-1', value=t('views.status.delete'))