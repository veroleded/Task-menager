extends ../layouts/application.pug

block header
  = t('views.tasks.new.label')

block content
  +formFor()(action=route('tasks') method='post')
    +input(tasks, 'name', errors)(type="text")
    +textarea(tasks, 'description', errors) 
    +select(tasks, 'statusId', errors, statuses)
    +select(tasks, 'executorId', errors, users)
    +select(tasks, 'labels', errors, labels, true)(multiple)
    +submit(status)(value=t('views.status.new.create'))