extends ../layouts/application.pug

block content
  h1.mb-3= t('views.tasks.label')
  a.btn.btn-dark(href=route('newTasks'))= t('views.tasks.create')
  table.table.table-striped
    thead
      tr
        th= t('views.tasks.id')
        th= t('views.tasks.name')
        th= t('views.tasks.status')
        th= t('views.tasks.creator')
        th= t('views.tasks.executor')
        th= t('views.tasks.createdAt')
        th
    tbody
      each task in tasks
        tr
          td= task.id
          td= task.name
            //- a.(href=route())= task.name
          td= task.status
          td= task.creator
          td= task.executor
          td= formatDate(status.createdAt)
          td
            .d-flex.flex-wrap
              //- a.btn.btn-dark.m-1(href=route('tasksEdit', { id: tasks.id }))= t('views.tasks.edit') TODO: why don't work route?
              a.btn.btn-dark.m-1(href=`tasks/${tasks.id}/edit`)= t('views.tasks.edit')
              //- +buttonTo(route('tasksDelete', { id: status.id} ), 'DELETE')(class='btn btn-danger m-1', value=t('views.tasks.delete'))
              +buttonTo(`/tasks/${tasks.id}`, 'DELETE')(class='btn btn-danger m-1', value=t('views.tasks.delete'))
