extends ../layouts/application.pug

block header
  = t('views.task.edit.editTask')

block content
  +formFor()(action=`/tasks/${task.id}` method='post')
    +input(task, 'name', errors)(type="text")
    +textarea(task, 'description', errors)
    +select(statuses, 'statusId', errors, false, task.statusId)(class='form-select')
    +select(users, 'executorId', errors, false, task.executorId)(class='form-select')
    +select(labels, 'labels', errors, true, selectedLabels)(class='form-select')
    input(name="_method" type="hidden" value='patch')
    +submit(status)(value=t('views.statuses.new.submit'))
  +buttonTo(`/tasks/${task.id}`, 'delete')(value=t('views.task.edit.delete'), class="btn btn-danger mt-2")
