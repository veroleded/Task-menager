extends ../layouts/application.pug

block content
  h1.fw-bold= t('views.labelList')
  a.btn.btn-primary.mb-5(href=route('newLabel'))= t('views.label.new.add')
  table.table.table-light.table-striped
    thead
      tr.table-dark
        th= t('views.label.id')
        th= t('views.label.name')
        th= t('views.label.createdAt')
        th
    tbody
      each label in labels
        tr
          td= label.id
          td= label.name
          td= formatDate(label.createdAt)
          td
            a.btn.btn-primary(href=`/labels/${label.id}/edit`)= t('views.label.edit.editLabel')